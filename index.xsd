<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  	<xs:element name="Holding">
       <xs:complexType>
            <xs:sequence>
              	<xs:element name="codigoHolding" type="xs:ID"></xs:element>
    			<xs:element name="nome" type="xs:string"></xs:element>
                <xs:element name="empresa" type="Empresa" minOccurs="1" maxOccurs="unbounded"></xs:element>
            </xs:sequence>
         </xs:complexType>
  	</xs:element>
  	<xs:complexType name="Empresa">
      <xs:sequence>
        <xs:element name="codigoEmpresa" type="xs:ID"></xs:element>
        <xs:element name="razaoSocial" type="xs:string"></xs:element>
        <xs:element name="fantasia" type="xs:string"></xs:element>
        <xs:element name="logradouro" type="xs:string"></xs:element>
        <xs:element name="loja" type="Loja" minOccurs="1" maxOccurs="unbounded"></xs:element>
      </xs:sequence>
  	</xs:complexType>
    <xs:complexType name="Loja">
   		<xs:sequence>
          	<xs:element name="codigoLoja" type="xs:ID"></xs:element>
        	<xs:element name="nome" type="xs:string"></xs:element>
        	<xs:element name="dataAbertura" type="xs:dateTime"></xs:element>
       		<xs:element name="nroFuncionario" type="xs:integer"></xs:element>
            <xs:element name="departamento" type="Departamento" minOccurs="1" maxOccurs="unbounded"></xs:element>
    	</xs:sequence>
    </xs:complexType>
  	<xs:complexType name="Departamento">
   		<xs:sequence>
          	<xs:element name="codigoDepartamento" type="xs:ID"></xs:element>
        	<xs:element name="nome" type="xs:string"></xs:element>
          	<xs:element name="secao" type="Secao" minOccurs="1" maxOccurs="unbounded"></xs:element>
    	</xs:sequence>
    </xs:complexType>
  	<xs:complexType name="Secao">
   		<xs:sequence>
          	<xs:element name="codigoSecao" type="xs:ID"></xs:element>
        	<xs:element name="nome" type="xs:string"></xs:element>
          	<xs:element name="categoria" type="Categoria" minOccurs="1" maxOccurs="unbounded"></xs:element>
    	</xs:sequence>
    </xs:complexType>
  	<xs:complexType name="Categoria">
   		<xs:sequence>
          	<xs:element name="codigoCategoria" type="xs:ID"></xs:element>
        	<xs:element name="nome" type="xs:string"></xs:element>
        	<xs:element name="produto" type="Produto" minOccurs="1" maxOccurs="unbounded"></xs:element>
    	</xs:sequence>
    </xs:complexType>
  	<xs:complexType name="Produto">
   		<xs:sequence>
          	<xs:element name="codigoProduto" type="xs:ID"></xs:element>
        	<xs:element name="nome" type="xs:string"></xs:element>
          	<xs:element name="estoqueAtual" type="xs:integer"></xs:element>
			<xs:element name="estoqueMinimo" type="xs:integer"></xs:element>
          	<xs:element name="grade" type="Grade"></xs:element>
    	</xs:sequence>
    </xs:complexType>
    <xs:complexType name="Grade">
      <xs:sequence>
        <xs:element name="codigoGrade" type="xs:ID"></xs:element>
        <xs:element name="nome" type="xs:string"></xs:element>
        <xs:element name="gradeItem" type="GradeItem" minOccurs="1" maxOccurs="unbounded"></xs:element>
   	  </xs:sequence>
    </xs:complexType>
  	<xs:complexType name="GradeItem">
      <xs:sequence>
        <xs:element name="codigoGradeItem" type="xs:ID"></xs:element>
        <xs:element name="nome" type="xs:string"></xs:element>
        <xs:element name="cor" type="Cor" minOccurs="1" maxOccurs="unbounded"></xs:element>
        <xs:element name="tamanho" type="Tamanho" minOccurs="1" maxOccurs="unbounded"></xs:element>
  	  </xs:sequence>
    </xs:complexType>
  	<xs:complexType name="Cor">
      <xs:sequence>
        <xs:element name="codigoCor" type="xs:ID"></xs:element>
        <xs:element name="nome" type="xs:string"></xs:element>
      </xs:sequence>
  	</xs:complexType>
  	<xs:complexType name="Tamanho">
      <xs:sequence>
        <xs:element name="codigoTamanho" type="xs:ID"></xs:element>
        <xs:element name="nome" type="xs:string"></xs:element>
      </xs:sequence>
  	</xs:complexType>
</xs:schema> 